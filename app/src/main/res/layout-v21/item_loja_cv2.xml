<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/oh_color_base"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/iv_img_listLoja"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_heart_loja"
            android:src="@drawable/ic_heart_24_white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_heart_24_white"
            android:layout_margin="3dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:layout_margin="3dp" />

    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_img_listLoja"
        android:layout_width="75dp"
        android:layout_height="75dp"
        fresco:placeholderImage="@drawable/ic_fav"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@drawable/ic_fav"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/ic_fav"


        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        fresco:elevation="4dp" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_item_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="16sp"
        android:text="Nome Loja"
        android:layout_alignTop="@+id/iv_img_listLoja"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:layout_toEndOf="@+id/iv_img_listLoja" />

    <TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:id="@+id/tv_catLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="10sp"
        android:text="Categoria"
        android:layout_below="@+id/tv_item_pedido"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:layout_toEndOf="@+id/iv_img_listLoja" />

    <TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:id="@+id/tv_endLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="10sp"
        android:text="EndereÃ§o"
        android:layout_below="@+id/tv_catLoja"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:layout_toEndOf="@+id/iv_img_listLoja" />

    <!--TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:id="@+id/tv_distancia_loja_km"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:textSize="7sp" /-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/tv_distancia_loja"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:layout_marginRight="2dp" />



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/dest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="58dp"
        android:id="@+id/imageView4"
        android:src="@drawable/xxx"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:id="@+id/textView2"
        android:textSize="10sp"
        android:layout_below="@+id/tv_item_pedido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp" />


</RelativeLayout>
</android.support.v7.widget.CardView>