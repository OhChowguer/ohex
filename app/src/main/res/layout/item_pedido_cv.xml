<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_nome_loja_lista_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="16sp"
        android:text="Ohexpress"
        android:layout_marginTop="1dp" />

    <TextView
        android:textColor="#808080"
        android:layout_below="@+id/tv_nome_loja_lista_pedido"
        android:id="@+id/tv_data_lista_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="14sp"
        android:text="12/12/15" />

    <TextView
        android:textColor="#808080"
        android:layout_below="@+id/tv_data_lista_pedido"
        android:id="@+id/tv_status_lista_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="14sp"
        android:text="Visa Credito" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="209,99"
        android:id="@+id/tv_total_pedido"
        android:layout_below="@+id/tv_nome_loja_lista_pedido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aberto"
        android:id="@+id/tv_status_ped"
        android:layout_alignTop="@+id/tv_total_pedido"
        android:layout_toLeftOf="@+id/tv_total_pedido"
        android:layout_toStartOf="@+id/tv_total_pedido"
        android:layout_marginRight="16dp" />


</RelativeLayout>
</android.support.v7.widget.CardView>