<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_numero_pedidos_cfg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_list_ohcolor_24dp"
        android:layout_margin="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/accent"
        android:layout_below="@+id/iv_numero_pedidos_cfg"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedidos*"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/iv_numero_pedidos_cfg"
        android:layout_toRightOf="@+id/iv_numero_pedidos_cfg"
        android:layout_toEndOf="@+id/iv_numero_pedidos_cfg"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_ultimo_login"
        android:src="@drawable/ic_login_ohcolor_24dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultimo login: 12/12/2015*"
        android:id="@+id/tv_ultimo_login"
        android:textSize="12sp"
        android:layout_alignTop="@+id/iv_ultimo_login"
        android:layout_toRightOf="@+id/iv_ultimo_login"
        android:layout_toEndOf="@+id/iv_ultimo_login" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/accent"
        android:layout_below="@+id/iv_ultimo_login"
        android:id="@+id/view2" />
</RelativeLayout>
</android.support.v7.widget.CardView>