<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".PedidoActivity"
    android:outlineProvider="paddedBounds">


    <android.support.v7.widget.Toolbar
        android:id="@+id/oh_top_toolbar"
        android:layout_width='match_parent'
        android:elevation='4dp'
        android:layout_height='50dp'
        android:background='?attr/colorPrimary'
        android:minHeight='?attr/actionBarSize'
        android:focusable="false" >


    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rl_fragment_container_pedido"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/oh_top_toolbar"></RelativeLayout>

    <Button
        android:id="@+id/bt_add_produto_pedido_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDC951"
        android:text="Finalizar"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="AddPedido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:id="@+id/tv_label_total_cesta"
        android:layout_above="@+id/bt_add_produto_pedido_unit"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="129,90"
        android:id="@+id/tv_total_pedido"
        android:layout_alignTop="@+id/tv_label_total_cesta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp" />


</RelativeLayout>
