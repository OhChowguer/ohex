<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">




    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_img_listLoja"
        android:layout_width="55dp"
        android:layout_height="55dp"
        fresco:placeholderImage="@drawable/ic_fav"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@drawable/ic_fav"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/ic_fav"


        />

    <TextView
        android:textColor="#000000"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:id="@+id/tv_item_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="16sp"
        android:text="Nome Loja"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:layout_below="@+id/tv_item_pedido"
        android:id="@+id/tv_catLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="10sp"
        android:text="Categoria"
        android:layout_marginLeft="10dp" />

    <TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:layout_toRightOf="@+id/iv_img_listLoja"
        android:layout_below="@+id/tv_catLoja"
        android:id="@+id/tv_endLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="10sp"
        android:text="EndereÃ§o"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/iv_map_lista_loja"
        android:src="@drawable/ic_map_gray_25"
        android:layout_alignTop="@+id/tv_distancia_loja"
        android:layout_toLeftOf="@+id/tv_distancia_loja"
        android:layout_toStartOf="@+id/tv_distancia_loja" />

    <!--TextView
        android:textColor="@color/OH_CINZA_ESCURO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:id="@+id/tv_distancia_loja_km"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:textSize="7sp" /-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/tv_distancia_loja"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp" />


</RelativeLayout>
</android.support.v7.widget.CardView>