<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OH_CINZA_CLARO"
    tools:context="br.com.ohexpress.ohex.fragment.LojaFragment">

    <ProgressBar
        android:id="@+id/progressbar_lojas"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:indeterminateDrawable="@drawable/myprogressbar"
        android:layout_gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:elevation="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</FrameLayout>




