<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity"
    android:background="#CC333F">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo cadastro"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Já tem uma conta? Faça login aqui!"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/tvNome"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:autoText="false"
        android:textColorHint="#FFFFFF"
        android:editable="false"
        android:drawableLeft="@drawable/ic_nome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textEmailAddress"
        android:ems="10"
        android:id="@+id/tvLogin"
        android:layout_below="@+id/tvNome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:hint="Login"
        android:textColorHint="#FFFFFF"
        android:editable="true"
        android:drawableLeft="@drawable/ic_useracc"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tvEmail"
        android:layout_below="@+id/tvLogin"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:editable="true"
        android:drawableLeft="@drawable/ic_email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/tvSenha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tvEmail"
        android:textColorHint="#FFFFFF"
        android:hint="Senha"
        android:editable="true"
        android:inputType="textPassword"
        android:singleLine="false"
        android:drawableLeft="@drawable/ic_senha"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/button"
        android:background="#EDC951"
        android:onClick="add"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/tvSenha"
        android:layout_alignEnd="@+id/tvSenha" />


</RelativeLayout>
