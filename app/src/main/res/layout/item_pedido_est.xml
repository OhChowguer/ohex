        android:layout_alignLeft="@+id/tv_item1_est_ped"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_item1_est_ped"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fab_left_est"
        android:layout_toEndOf="@+id/fab_left_est" />

