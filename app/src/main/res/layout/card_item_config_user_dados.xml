<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chowguer@gmail.com*"
        android:id="@+id/tv_email_cfg"
        android:layout_alignBottom="@+id/iv_email_cfg"
        android:layout_toRightOf="@+id/iv_email_cfg"
        android:layout_toEndOf="@+id/iv_email_cfg"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_email_cfg"
        android:src="@drawable/ic_email_ohcolor"
        android:layout_margin="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/accent"
        android:layout_below="@+id/iv_email_cfg"
        android:id="@+id/view1" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_nome_cfg"
        android:src="@drawable/ic_usuario_amarelo"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diego Rafael*"
        android:id="@+id/tv_nome_cfg"
        android:textSize="12sp"
        android:layout_alignTop="@+id/iv_nome_cfg"
        android:layout_alignLeft="@+id/tv_email_cfg"
        android:layout_alignStart="@+id/tv_email_cfg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/accent"
        android:layout_below="@+id/iv_nome_cfg"
        android:id="@+id/view2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_user_cfg"
        android:src="@drawable/ic_acc_ohcolor_24dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chowguer*"
        android:id="@+id/tv_user_cfg"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iv_user_cfg"
        android:layout_alignLeft="@+id/tv_nome_cfg"
        android:layout_alignStart="@+id/tv_nome_cfg" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/accent"
        android:layout_below="@+id/iv_user_cfg"
        android:id="@+id/view3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_data_cfg"
        android:src="@drawable/ic_calendar_ohcolor"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de cadastro : 12/12/2015*"
        android:id="@+id/tv_data_cfg"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iv_data_cfg"
        android:layout_alignLeft="@+id/tv_user_cfg"
        android:layout_alignStart="@+id/tv_user_cfg" />

</RelativeLayout>

    </android.support.v7.widget.CardView>