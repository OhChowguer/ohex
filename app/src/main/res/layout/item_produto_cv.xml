<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="#FFFFFF"
    >




    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_img_listProduto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:placeholderImage="@drawable/ic_fav"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@drawable/ic_fav"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/ic_fav" />

    <TextView
        android:textColor="#000000"
        android:layout_toRightOf="@+id/iv_img_listProduto"
        android:id="@+id/tv_nomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:textSize="16sp"
        android:text="Nome Loja"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="13,90"
        android:id="@+id/tv_preco_produto"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/tv_nomeProduto"
        android:layout_toLeftOf="@+id/iv_next"
        android:layout_toStartOf="@+id/iv_next"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_desc_produto"
        android:layout_below="@+id/tv_nomeProduto"
        android:layout_alignLeft="@+id/tv_nomeProduto"
        android:layout_alignStart="@+id/tv_nomeProduto"
        android:textSize="9sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:id="@+id/tv_sifra"
        android:layout_alignBottom="@+id/tv_nomeProduto"
        android:layout_toLeftOf="@+id/tv_preco_produto"
        android:layout_toStartOf="@+id/tv_preco_produto"
        android:textSize="7dp"
        android:layout_marginTop="1dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_next"
        android:src="@drawable/ic_next"
        android:layout_alignTop="@+id/tv_preco_produto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp" />


</RelativeLayout>
</android.support.v7.widget.CardView>